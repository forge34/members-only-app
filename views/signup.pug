extends layout

block content
    .form

        h1 Sign up
        form(method="POST")

            .input-group    
                label(for="firstname") Firstname
                input(name="firstname")
            .input-group
                label(for="lastname") Lastname
                input(name="lastname")
            .input-group
                label(for="username") Username
                input(name="username")
            .input-group
                label(for="password" autocomplete="new-password") Password
                input(name="password" type="password")

            .input-group
                label(for="confirmPassword" autocomplete="on") Confirm Password
                input(name="confirmPassword" type="password")

            button.btn Submit
